library(GGally)

# Create a data frame with the given data
data <- data.frame(
  Student = c("A", "B", "C", "D", "E"),
  Math_Score = c(85, 72, 90, 78, 88),
  Science_Score = c(78, 85, 80, 75, 82),
  Attendance = c(95, 92, 98, 85, 93)
)

# Create a pairwise scatter plot matrix using GGally
ggpairs(data[, c("Math_Score", "Science_Score", "Attendance")],
        upper = list(continuous = wrap("cor", size = 5)),
        lower = list(continuous = "points"),
        diag = list(continuous = "barDiag"),
        title = "Pairwise Scatter Plot Matrix")
